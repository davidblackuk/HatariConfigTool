            <controls:SystemList Grid.Column="0"></controls:SystemList>

            
            
            <!-- <BoxView Margin="5,10,10,10" BackgroundColor="{StaticResource ComponentBackground}" Grid.Column="1"></BoxView> -->
             
            <controls:SystemConfigurationPanel Grid.Column="2"></controls:SystemConfigurationPanel>

        </Grid>


    </ContentPage.Content>
