<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MyAtariCollection.Controls"
             x:Class="MyAtariCollection.Controls.ConfigurationSection">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame Margin="10" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <controls:H2 Text="{TemplateBinding Title}"></controls:H2>
                    <BoxView HeightRequest="1"  Color="{StaticResource Gray600}"></BoxView>
                    <ContentPresenter />
                </VerticalStackLayout>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>