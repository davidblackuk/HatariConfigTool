<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MyAtariCollection.Models"
             xmlns:controls="clr-namespace:MyAtariCollection.Controls"
             x:Class="MyAtariCollection.Controls.SystemPanelEntry"
             x:DataType="models:AtariConfiguration">
    
    <VerticalStackLayout Margin="0,5,0,5">
        <Frame>
            <HorizontalStackLayout >
                <Rectangle WidthRequest="60" HeightRequest="60" Fill="Cyan"></Rectangle>
                <VerticalStackLayout Margin="10,0,0,0">
                    <controls:H3 Text="{Binding DisplayName}"></controls:H3>
                    <Label Text="Atari ST, 512k, 1 disk"></Label>
                    <Label Text="last modified Jun 29 2023"></Label>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>
    </VerticalStackLayout>
    
    
</ContentView>
