<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MyAtariCollection.Controls"
             xmlns:vm="clr-namespace:MyAtariCollection.ViewModels"
             x:DataType="vm:MainViewModel"

             x:Class="MyAtariCollection.Controls.HardDiskPathEditor">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid Grid.ColumnDefinitions="60,*,40,40" Margin="0,10,0,0">
                <Label Text="{TemplateBinding Title}" VerticalOptions="Center"></Label>
                <Entry Text="{TemplateBinding DiskImagePath}" Grid.Column="1"
                       VerticalOptions="Center" />
                <Button Style="{StaticResource InlineMaterialButton}" Grid.Column="2"
                        Text="{x:Static controls:IconFont.Cancel}" 
                        Command="{TemplateBinding ClearDiskImageCommand}"
                        CommandParameter="{TemplateBinding DiskId}"
                        VerticalOptions="Center" />
                <Button Style="{StaticResource InlineMaterialButton}" Grid.Column="3"
                        Text="{x:Static controls:IconFont.File_open}"
                        Command="{TemplateBinding BrowseDiskImageCommand}" 
                        CommandParameter="{TemplateBinding DiskId}"
                        VerticalOptions="Center" />
            </Grid>

        </ControlTemplate>
    </ContentView.ControlTemplate>   
</ContentView>